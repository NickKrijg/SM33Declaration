<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddAuthorityActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/addAuthTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/title_activity_add_authority"
            android:textSize="@dimen/backdrop_title"
            android:textColor="@android:color/white"/>

    </android.support.design.widget.AppBarLayout>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchAddAuth"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/addAuthTopBar"
        app:layout_constraintBottom_toTopOf="@+id/spinnerAddAuth"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchAddAuth"
        android:layout_marginTop="50dp"
        android:id="@+id/spinnerAddAuth"
        />

    <Button
        android:id="@+id/btAddAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:background="@drawable/accept_button"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAddAuth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>